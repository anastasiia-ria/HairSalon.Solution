@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Appointment>;

<h1>Appointments</h1>

@if (@Model.Count == 0)
{
  <h3>No appointments have been added yet!</h3>
} 

@foreach (Appointment appointment in Model)
{
  <li>@Html.ActionLink($"{appointment.Date} {appointment.Time}", "Details", new { id = appointment.AppointmentId }) | @appointment.Client.Name</li>
}